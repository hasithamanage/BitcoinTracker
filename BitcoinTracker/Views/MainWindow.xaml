<Window x:Class="BitcoinTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Bitcoin Tracker" Height="650" Width="900"
        Background="#F4F7FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Controls -->
            <RowDefinition Height="Auto"/>
            <!-- Info labels -->
            <RowDefinition Height="*"/>
            <!-- Graph -->
            <RowDefinition Height="Auto"/>
            <!-- Status -->
        </Grid.RowDefinitions>

        <!-- Date range selection & Analyze button -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <TextBlock Text="Start date:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker SelectedDate="{Binding StartDate}" Width="100" Margin="0,0,20,0"/>

            <TextBlock Text="End date:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker SelectedDate="{Binding EndDate}" Width="100" Margin="0,0,20,0"/>

            <Button Content="Analyze Bitcoin Data"
                    Click="AnalyzeButton_Click"
                    Width="130"
                    Height="30"
                    Background="#0066CC"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Analysis summary info-->
        <Border Grid.Row="1"
        Background="#FFFBEA"
        BorderBrush="#FFE08A"
        BorderThickness="1"
        CornerRadius="6"
        Padding="10"
        Margin="0,10,0,10">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding BearishDays}" FontSize="14" FontWeight="SemiBold" Foreground="#333"/>
                <TextBlock Text="{Binding HighestVolumeInfo}" FontSize="14" FontWeight="SemiBold" Foreground="#333"/>
                <TextBlock Text="{Binding BestTradeInfo}" FontSize="14" FontWeight="SemiBold" Foreground="#333"/>
            </StackPanel>
        </Border>

        <!-- Graph Canvas -->
        <Border Grid.Row="2"
                BorderThickness="1"
                BorderBrush="#CCC"
                Background="White"
                CornerRadius="6"
                Padding="4"
                Margin="0,5,0,5"
                SnapsToDevicePixels="True">
            <Canvas x:Name="GraphCanvas" Background="White"/>
        </Border>

        <!-- Status message -->
        <TextBlock Grid.Row="3"
                   Text="{Binding StatusMessage}"
                   Foreground="#444"
                   FontStyle="Italic"
                   Margin="5,10,0,0"/>
    </Grid>
</Window>
